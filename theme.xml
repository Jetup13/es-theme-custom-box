   <!--Check /assets/systemviews/ to edit system views to your liking -->
   
 <feature supported="carousel">
    <view name="system">
	<image name="logo">
		 <path>./logos/white/${system.theme}.png</path>
	</image>
	  
      <image name="characters" extra="true">
         <origin>0 0</origin>
         <pos>0 0</pos>
         <size>1 1</size>
		 <zIndex>6</zIndex>
         <path>./characters/${system.theme}.png</path>
      </image>
	  
      <text name="systemInfo">     
         <pos>0.0 0.0</pos>
         <backgroundColor>00000000</backgroundColor>
         <fontPath>./assets/font/ClearSans-Bold.ttf</fontPath>
	     <fontSize>0.05</fontSize>
         <zIndex>5</zIndex>	     
      </text>            
    </view>
 </feature>

  <!--Check /assets/helpcolor/ to edit help color files to your liking -->
  
 <view name="system">
     <helpsystem name="help">
         <fontPath>./assets/font/ClearSans-Bold.ttf</fontPath>
         <fontSize>0.028</fontSize>     
         <pos>0.02 0.948</pos>      
     </helpsystem>
  </view>  

  <view name="detailed,video,basic,grid">
     <helpsystem name="help">
         <fontPath>./assets/font/ClearSans-Bold.ttf</fontPath>
         <fontSize>0.028</fontSize>     
         <pos>0.02 0.948</pos>      
     </helpsystem>
  </view>  
	
   <!--Check /assets/gamelistview/ to edit gamelist views to your liking -->
	
  <view name="menu">
	
    <menuBackground name="menubg">
         <color>2d2d2d</color>
    </menuBackground>
	
	<menuText name="menutext, menutitle">
         <fontPath>./assets/font/ClearSans-Bold.ttf</fontPath>
         <fontSize>.039</fontSize>
         <color>ffffff</color>
    </menuText>
	
    <menuTextEdit name="menutextedit">
         <inactive>./assets/extraimages/textinput_inactive.png</inactive>
         <active>./assets/extraimages/textinput_active.png</active>
    </menuTextEdit>
	
  </view>
  
